{
  "name": "abcjs-vscode",
  "displayName": "abcjs vscode",
  "description": "Abc music notation editor with abcjs",
  "version": "0.0.1",
  "author": {
	  "name": "Alen Å iljak"
  },
  "repository": {
	  "url": "https://gitlab.com/alensiljak/abcjs-vscode"
  },
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:abcjs-vscode.helloWorld",
	"onCommand:abcjs-vscode.showPreview"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "abcjs-vscode.helloWorld",
        "title": "Hello World"
      },
	  {
		  "command": "abcjs-vscode.showPreview",
		  "title": "abcjs-vscode: Show Preview"
	  }
    ],
	"languages": [
		{
			"id": "abc",
			"aliases": [
				"ABC"
			],
			"extensions": [
				".abc"
			]
		}
	],
	"grammars": [
		{
			"language": "abc",
			"scopeName": "source.abc",
			"path": "./abc.tmGrammar.json"
		}
	]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.53.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "abcjs": "6.0.0-beta.27",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
	"jsdom": "16.4.0",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
