{
  "name": "abcjs-vscode",
  "displayName": "abcjs vscode",
  "description": "Abc music notation editor, using abcjs",
  "version": "1.3.1",
  "publisher": "alensiljak",
  "author": {
    "name": "Alen Å iljak"
  },
  "license": "GPL-3.0-or-later",
  "icon": "res/icon128.png",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/alensiljak/abcjs-vscode.git"
  },
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:abcjs-vscode.helloWorld",
    "onCommand:abcjs-vscode.showPreview",
    "onCommand:abcjs-vscode.consolidateConsecutiveNotes",
    "onCommand:abcjs-vscode.convertToEnharmonia",
    "onCommand:abcjs-vscode.convertToRest",
    "onCommand:abcjs-vscode.divideLength",
    "onCommand:abcjs-vscode.duplicateLength",
    "onCommand:abcjs-vscode.transposeHalfStepDown",
    "onCommand:abcjs-vscode.transposeHalfStepUp",
    "onCommand:abcjs-vscode.transposeOctDown",
    "onCommand:abcjs-vscode.transposeOctUp"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "abcjs-vscode.showPreview",
        "title": "abcjs-vscode: Show Preview"
      },
      {
        "command": "abcjs-vscode.consolidateConsecutiveNotes",
        "title": "abcjs-edit: consolidateConsecutiveNotes"
      },
      {
        "command": "abcjs-vscode.convertToEnharmonia",
        "title": "abcjs-edit: convertToEnharmonia"
      },
      {
        "command": "abcjs-vscode.convertToRest",
        "title": "abcjs-edit: convertToRest"
      },
      {
        "command": "abcjs-vscode.divideLength",
        "title": "abcjs-edit: divideLength"
      },
      {
        "command": "abcjs-vscode.duplicateLength",
        "title": "abcjs-edit: duplicateLength"
      },
      {
        "command": "abcjs-vscode.transposeHalfStepDown",
        "title": "abcjs-edit: transposeHalfStepDown"
      },
      {
        "command": "abcjs-vscode.transposeHalfStepUp",
        "title": "abcjs-edit: transposeHalfStepUp"
      },
      {
        "command": "abcjs-vscode.transposeOctDown",
        "title": "abcjs-edit: transposeOctDown"
      },
      {
        "command": "abcjs-vscode.transposeOctUp",
        "title": "abcjs-edit: transposeOctUp"
      },
      {
        "command": "abcjs-vscode.transposeStepUp",
        "title": "abcjs-edit: transposeStepUp"
      },
      {
        "command": "abcjs-vscode.transposeStepDown",
        "title": "abcjs-edit: transposeStepDown"
      },
      {
        "command": "abcjs-vscode.reorderChordNotes",
        "title": "abcjs-edit: reorderChordNotes"
      },
      {
        "command": "abcjs-vscode.createInstrumentsFile",
        "title": "abcjs-edit: createInstrumentsFile"
      }
    ],
    "languages": [
      {
        "id": "abc",
        "aliases": [
          "ABC"
        ],
        "extensions": [
          ".abc"
        ]
      }
    ],
    "grammars": [
      {
        "language": "abc",
        "scopeName": "source.abc",
        "path": "./abc.tmGrammar.json"
      }
    ],
    "snippets": [
      {
        "language": "abc",
        "path": "./snippets.json"
      }
    ]
  },
  "scripts": {
    "x-vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "npx esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "build": "npm run esbuild",
    "lint": "eslint .",
    "pretest": "pnpm run lint",
    "publish": "npx vsce publish",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "7.2.0",
    "@types/mocha": "9.1.1",
    "@types/node": "18.7.16",
    "@types/vscode": "1.65.0",
    "@vscode/test-electron": "2.1.5",
    "eslint": "8.23.0",
    "glob": "7.2.0",
    "mocha": "9.2.2",
    "typescript": "4.8.2"
  },
  "dependencies": {
    "abc-editing-macros": "github:AntoineBalaine/abc-editing-macros",
    "vsce": "2.11.0"
  }
}
